---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../config";
import DefaultLayout from "@layouts/DefaultLayout.astro";

const { category } = Astro.params;
// Use Astro.glob() to fetch all posts, and then sort them by date.
const posts = (await Astro.glob("./**/*.{md,mdx}"))
  .sort(
    (a, b) =>
      new Date(b.frontmatter.pubDate).valueOf() -
      new Date(a.frontmatter.pubDate).valueOf()
  )
  .filter((post) => post.url.includes(`/${category}/`));

console.log(category);

export function getStaticPaths() {
  return [
    // Generates: /dogs/clifford
    { params: { category: "ukraine" } },
    { params: { category: "caucasus" } },
    { params: { category: "sahel" } },
    { params: { category: "about" } },
    { params: { category: "asia" } },
  ];
}
---
<DefaultLayout>
  <section>
    <ul>
      {
        posts.map((post) => (
          <li>
            <time datetime={post.frontmatter.pubDate}>
              {new Date(post.frontmatter.pubDate).toLocaleDateString(
                "en-us",
                {
                  year: "numeric",
                  month: "short",
                  day: "numeric",
                }
              )}
            </time>
            <a href={post.url}>{post.frontmatter.title}</a>
          </li>
        ))
      }
    </ul>
  </section>
</DefaultLayout>
<style>
  ul {
    list-style-type: none;
    padding: unset;
  }
  ul li {
    display: flex;
  }
  ul li time {
    flex: 0 0 130px;
    font-style: italic;
    color: #595959;
  }
  ul li a:visited {
    color: #8e32dc;
  }
</style>
