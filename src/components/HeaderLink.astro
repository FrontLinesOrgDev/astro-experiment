---
export interface Props extends astroHTML.JSX.AnchorHTMLAttributes {}

const { href, class: className, ...props } = Astro.props;
const cleanUrl = Astro.url.pathname.replace(/\/$/, "");
const isActive =
  href === "/" ? "" === cleanUrl : cleanUrl.startsWith(href.toString());
const classnames = [
  "py-3 w-full border-b-2 mx-auto font-medium text-sm border-transparent text-gray-500 hover:text-gray-700",
  "uppercase hover:bg-gray-100",
  "px-2 content-evenly text-center inline-block ",
];

if (isActive) {
  classnames.push("border-black text-black ");
}
---

<a href={href} class={classnames.join(" ")}> <slot /></a>

<style>
  a {
    display: inline-block;
    text-decoration: none;
  }
  a.active {
    font-weight: bolder;
    text-decoration: underline;
  }
</style>
